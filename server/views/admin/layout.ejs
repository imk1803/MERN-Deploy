<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Admin Panel' %></title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }
        
        .dashboard-container {
            display: flex;
        }
    
        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #343a40;
            color: white;
            padding: 20px;
            position: fixed;
        }
    
        .sidebar a {
            color: white;
            display: block;
            padding: 15px;
            text-decoration: none;
            font-size: 16px;
            border-radius: 5px;
        }
    
        .sidebar a:hover {
            background-color: #495057;
            text-decoration: none;
        }
    
        .content {
            margin-left: 260px;
            padding: 20px;
            width: 100%;
        }
    
        .card {
            transition: transform 0.3s, box-shadow 0.3s;
            border-radius: 10px;
        }
    
        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
    
        .table thead {
            background-color: #343a40;
            color: white;
        }
    
        .table tbody tr:hover {
            background-color: #f1f1f1;
        }
    </style>
    
</head>
<body>

<!-- Sidebar -->
<div class="sidebar">
    <h4>Admin Panel</h4>
    <a href="/admin/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
    <a href="/admin/users"><i class="fas fa-users"></i> Users</a>
    <a href="/admin/products"><i class="fas fa-box"></i> Products</a>
    <a href="/admin/orders"><i class="fas fa-shopping-cart"></i> Orders</a>
    <a href="/index"><i class="fas fa-arrow-left"></i> Quay lại trang chủ</a>
</div>

<!-- Main Content -->
<div class="content">
    <%- typeof body !== 'undefined' ? body : '' %>
</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

</body>
</html>
